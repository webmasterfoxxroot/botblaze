{
    "manifest_version": 3,
    "name": "BotBlaze - Apostas Automaticas",
    "version": "1.0.0",
    "description": "Bot de apostas automaticas para Blaze Double",
    "permissions": ["storage", "activeTab"],
    "host_permissions": ["https://blaze.bet.br/*", "https://blaze-4.com/*", "http://localhost/*"],
    "content_scripts": [
        {
            "matches": [
                "https://blaze.bet.br/pt/games/double*",
                "https://blaze-4.com/pt/games/double*"
            ],
            "js": ["content.js"],
            "css": ["overlay.css"],
            "run_at": "document_idle"
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}
